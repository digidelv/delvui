{
  "name": "@delvui/react",
  "version": "1.0.0",
  "description": "DelvUI React - DigiDelv Enterprise React Component Library",
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "lib/index.d.ts",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "files": [
    "lib",
    "es",
    "dist",
    "src"
  ],
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./atoms": {
      "import": "./es/atoms/index.js",
      "require": "./lib/atoms/index.js",
      "types": "./lib/atoms/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "scripts": {
    "build": "npm run build:js && npm run build:styles",
    "build:js": "tsc",
    "build:styles": "postcss src/styles/index.css -o dist/styles.css",
    "dev": "tsc -w",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "storybook": "storybook dev -p 6006"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "atomic-design",
    "delvui"
  ],
  "author": "Aman Soni <aman.soni.se@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "@delvui/core": "workspace:*",
    "@delvui/tokens": "workspace:*",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/react": "^9.1.1",
    "@storybook/react-vite": "^9.1.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "storybook": "^9.1.1",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidelv/delvui.git",
    "directory": "packages/frameworks/react"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/digidelv/delvui/issues"
  },
  "homepage": "https://github.com/digidelv/delvui#readme"
}
