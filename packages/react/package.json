{
  "name": "@delvui/react",
  "version": "1.0.0",
  "description": "DelvUI Design System - React Components",
  "main": "dist/index.js",
  "module": "es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "es",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir dist",
    "build:esm": "tsc --project tsconfig.build.json --module esnext --outDir es",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch",
    "clean": "rimraf dist es",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@delvui/core": "workspace:*",
    "@delvui/tokens": "workspace:*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "framer-motion": "^10.16.0",
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@storybook/react": "^7.5.0",
    "@storybook/react-vite": "^7.5.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "typescript": "^5.2.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.52.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "keywords": [
    "delvui",
    "design-system",
    "react",
    "components",
    "ui",
    "atomic-design"
  ],
  "author": "DelvUI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/delvui/delvui.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/delvui/delvui/issues"
  },
  "homepage": "https://delvui.dev",
  "publishConfig": {
    "access": "public"
  }
}