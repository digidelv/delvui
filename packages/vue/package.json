{
  "name": "@delvui/vue",
  "version": "1.0.0",
  "description": "DelvUI Design System - Vue Components",
  "main": "dist/index.js",
  "module": "es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "es",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "vue-tsc --project tsconfig.build.json && vite build --mode cjs",
    "build:esm": "vue-tsc --project tsconfig.build.json && vite build --mode esm",
    "build:types": "vue-tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "dev": "vite",
    "clean": "rimraf dist es",
    "lint": "eslint src --ext .ts,.vue",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@delvui/core": "workspace:*",
    "@delvui/tokens": "workspace:*",
    "vue": "^3.3.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/test-utils": "^2.4.0",
    "vitest": "^0.34.0",
    "vite": "^4.5.0",
    "vue-tsc": "^1.8.0",
    "typescript": "^5.2.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.52.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-plugin-vue": "^9.17.0"
  },
  "peerDependencies": {
    "vue": ">=3.0.0"
  },
  "keywords": [
    "delvui",
    "design-system",
    "vue",
    "vue3",
    "components",
    "ui",
    "atomic-design"
  ],
  "author": "DelvUI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/delvui/delvui.git",
    "directory": "packages/vue"
  },
  "bugs": {
    "url": "https://github.com/delvui/delvui/issues"
  },
  "homepage": "https://delvui.dev",
  "publishConfig": {
    "access": "public"
  }
}