{
  "name": "@delvui/react-native",
  "version": "1.0.0",
  "description": "DelvUI Design System - React Native Components",
  "main": "dist/index.js",
  "module": "es/index.js",
  "types": "dist/index.d.ts",
  "react-native": "es/index.js",
  "files": [
    "dist",
    "es",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc --project tsconfig.build.json --module commonjs --outDir dist",
    "build:esm": "tsc --project tsconfig.build.json --module esnext --outDir es",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist",
    "dev": "tsc --watch",
    "clean": "rimraf dist es",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest"
  },
  "dependencies": {
    "@delvui/core": "workspace:*",
    "@delvui/tokens": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "react-native": "^0.72.0",
    "react": "^18.2.0",
    "typescript": "^5.2.0",
    "rimraf": "^5.0.0",
    "eslint": "^8.52.0",
    "@react-native-community/eslint-config": "^3.2.0",
    "jest": "^29.7.0",
    "@testing-library/react-native": "^12.3.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-native": ">=0.60.0"
  },
  "keywords": [
    "delvui",
    "design-system",
    "react-native",
    "mobile",
    "components",
    "ui",
    "atomic-design"
  ],
  "author": "DelvUI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/delvui/delvui.git",
    "directory": "packages/react-native"
  },
  "bugs": {
    "url": "https://github.com/delvui/delvui/issues"
  },
  "homepage": "https://delvui.dev",
  "publishConfig": {
    "access": "public"
  }
}