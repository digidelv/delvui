{
  "name": "@delvui/design-system",
  "version": "1.0.0",
  "private": true,
  "description": "DelvUI - Design System with Atomic Architecture",
  "keywords": [
    "design-system",
    "ui-components",
    "atomic-design",
    "react",
    "vue",
    "angular",
    "react-native"
  ],
  "author": "Aman Soni aman.soni.se@gmail.com",
  "license": "MIT",
  "workspaces": [
    "packages/core",
    "packages/tokens",
    "packages/frameworks/react", 
    "packages/cli"
  ],
  "scripts": {
    "dev": "pnpm run --recursive --if-present dev",
    "build": "pnpm run --recursive --if-present build", 
    "test": "pnpm run --recursive --if-present test",
    "lint": "pnpm run --recursive --if-present lint",
    "type-check": "pnpm run --recursive --if-present type-check",
    "clean": "pnpm run --recursive --if-present clean",
    "bootstrap": "pnpm install",
    "publish:all": "pnpm run build && pnpm run publish --workspaces --if-present",
    "storybook": "pnpm --filter=@delvui/react run storybook",
    "build:tokens": "pnpm --filter=@delvui/tokens run build",
    "build:core": "pnpm --filter=@delvui/core run build",
    "build:react": "pnpm --filter=@delvui/react run build",
    "build:cli": "pnpm --filter=@delvui/cli run build",
    "dev:tokens": "pnpm --filter=@delvui/tokens run dev",
    "dev:core": "pnpm --filter=@delvui/core run dev", 
    "dev:react": "pnpm --filter=@delvui/react run dev",
    "dev:cli": "pnpm --filter=@delvui/cli run dev",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish",
    "publish:manual": "node scripts/publish.js",
    "pre-publish": "pnpm run build && pnpm test",
    "check-packages": "node scripts/check-packages.js"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.9",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "concurrently": "^9.1.0",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digidelv/delvui.git"
  },
  "homepage": "https://github.com/digidelv/delvui#readme",
  "bugs": {
    "url": "https://github.com/digidelv/delvui/issues"
  },
  "main": "jest.config.js"
}